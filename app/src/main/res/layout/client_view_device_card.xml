<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    android:elevation="8dp"
    android:layout_margin="8dp">

    <!-- Título del dispositivo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/deviceName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombre del dispositivo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary" />

        <ImageButton
            android:id="@+id/editNameButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_edit"
            android:background="@null"
            android:contentDescription="Editar nombre" />
    </LinearLayout>

    <!-- ID del dispositivo con diseño bonito -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/teal_700"
        android:padding="8dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:elevation="4dp">

        <TextView
            android:id="@+id/deviceId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ID: N/A"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/copyIdButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_copy"
            android:background="@null"
            android:contentDescription="Copiar ID" />
    </LinearLayout>

    <!-- Contenedor de sensores -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- CO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@color/white"
            android:layout_marginBottom="8dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CO (Monóxido de Carbono)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/deviceCO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/primary"
                android:paddingTop="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ppm (partes por millón)"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/gray" />
        </LinearLayout>

        <!-- CO2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@color/white"
            android:layout_marginBottom="8dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CO2 (Dióxido de Carbono)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/deviceCO2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/primary"
                android:paddingTop="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ppm (partes por millón)"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/gray" />
        </LinearLayout>

        <!-- PM2.5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@color/white"
            android:layout_marginBottom="8dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PM2.5 (Partículas finas)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/devicePM25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/primary"
                android:paddingTop="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="µg/m³ (microgramos por metro cúbico)"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/gray" />
        </LinearLayout>

        <!-- PM10 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@color/white"
            android:layout_marginBottom="8dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PM10 (Partículas gruesas)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/devicePM10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/primary"
                android:paddingTop="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="µg/m³ (microgramos por metro cúbico)"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/gray" />
        </LinearLayout>

        <!-- Humedad -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@color/white"
            android:layout_marginBottom="8dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Humedad (Relativa)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/deviceHumidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/primary"
                android:paddingTop="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="%(porcentaje)"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/gray" />
        </LinearLayout>

        <!-- Temperatura -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@color/white"
            android:layout_marginBottom="8dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temperatura"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/deviceTemperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/primary"
                android:paddingTop="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/gray" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
