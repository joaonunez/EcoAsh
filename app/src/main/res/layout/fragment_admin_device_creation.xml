<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/deviceNameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del dispositivo"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <AutoCompleteTextView
        android:id="@+id/userEmailInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo del usuario (opcional)"
        android:padding="12dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/registerDeviceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Dispositivo"/>
</LinearLayout>
